{
  "name": "mailwatch/mailwatch",
  "description": "MailWatch is a web-based front-end to MailScanner",
  "homepage": "http://mailwatch.org/",
  "license": "GPL-2.0",
  "type": "project",
  "support": {
    "issues": "https://github.com/mailwatch/MailWatch/issues"
  },
  "require": {
    "php": "^5.6 || ^7.0",
    "ext-curl": "*",
    "ext-xml": "*",
    "ezyang/htmlpurifier": "^4.10",
    "guzzlehttp/guzzle": "~6.0",
    "indigophp/hash-compat": "^1.1",
    "ircmaxell/password-compat": "^1.0",
    "maxmind-db/reader": "~1.0",
    "neitanod/forceutf8": "~2.0",
    "paragonie/random_compat": "^2.0",
    "pear/mail": "^1.4",
    "pear/mail_mime-decode": "1.5.5.2",
    "pear/net_smtp": "^1.7",
    "pear/net_socket": "^1.2",
    "pear/pager": "^2.5",
    "pear/pear-core-minimal": "^1.10",
    "rmccue/requests": "^1.7",
    "wikimedia/ip-set": "^1.2"
  },
  "suggest": {
    "ext-bcmath": "bcmath or gmp is required for decoding larger integers with MaxMind GeoIP decoder",
    "ext-gmp": "bcmath or gmp is required for decoding larger integers with MaxMind GeoIP decoder",
    "ext-maxminddb": "A C-based database decoder that provides significantly faster lookups for MaxMind GeoIP"
  },
  "autoload": {
    "psr-4": {
      "MailWatch\\": "src/MailWatch"
    },
    "classmap": [
      "mailscanner/lib/xmlrpc"
    ]
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "friendsofphp/php-cs-fixer": ">=2.8 <3.0.0"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "5.6"
    }
  },
  "scripts": {
    "fix-cs": "vendor/bin/php-cs-fixer fix --verbose"
  }
}
