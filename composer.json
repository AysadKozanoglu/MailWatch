{
  "name": "mailwatch/mailwatch",
  "description": "MailWatch is a web-based front-end to MailScanner",
  "homepage": "http://mailwatch.org/",
  "license": "GPLv2",
  "type": "project",
  "support": {
    "issues": "https://github.com/mailwatch/MailWatch/issues"
  },
  "require": {
    "php": "^5.6 || ^7.0",
    "neitanod/forceutf8": "~2.0",
    "ezyang/htmlpurifier": "^4.9",
    "wikimedia/ip-set": "^1.1",
    "ircmaxell/password-compat": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.2 || ^3.0.2",
    "wimg/php-compatibility": "*"
  },
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wimg/php-compatibility",
    "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wimg/php-compatibility"
  }
}
